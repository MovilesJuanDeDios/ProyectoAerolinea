<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <ss.com.bannerslider.Slider
         android:id="@+id/banner_slider"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         app:slider_animateIndicators="true"
         app:slider_indicatorSize="10dp"
         app:slider_interval="4000"
         app:slider_loopSlides="true"
         app:slider_selectedSlideIndicator="@drawable/indicator_round_square_selected"
         app:slider_unselectedSlideIndicator="@drawable/indicator_round_square_unselected" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/buscar_vuelos_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:background="@color/colorAccent"
                android:text="@string/buscar_vuelos"
                android:textColor="#FAFAFA"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Buscar desde:"/>-->

            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>